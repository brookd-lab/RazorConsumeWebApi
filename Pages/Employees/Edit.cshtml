@page
@model Product_Tutorial.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded p-3">
        <h1 class="text-center mb-5">Update Employee</h1>
        <form method="post" enctype="multipart/form-data">
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input asp-for="Employee.Name" class="form-control" />
                    <span asp-validation-for="Employee.Name" class="text-danger"></span>
                </div>

            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Age</label>
                <div class="col-sm-8">
                    <input asp-for="Employee.Age" class="form-control" />
                    <span asp-validation-for="Employee.Age" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-md-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Update
                    </button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-success" href="/Employees/index" role="button">Back </a>
                </div>
            </div>
        </form>
    </div>
</div>

